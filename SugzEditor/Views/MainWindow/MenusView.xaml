		<sgzconv:InvertBooleanConverter x:Key="InvertBool" />
	</UserControl.Resources>

	<Grid Height="30"
		  WindowChrome.IsHitTestVisibleInChrome="True">
		<TextBlock Text="Sugz Editor" 
				   HorizontalAlignment="Center" 
				   VerticalAlignment="Center" />
