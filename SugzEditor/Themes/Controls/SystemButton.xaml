<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sgzcontrols="clr-namespace:SugzTools.Controls;assembly=SugzTools">

    
    <Style x:Key="SystemButtonStyle" TargetType="{x:Type sgzcontrols:SgzIcon}">
        <Setter Property="Width" Value="30" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="DockPanel.Dock" Value="Right"/>
        <Setter Property="Foreground" Value="{DynamicResource MainForeground}"/>
        <Setter Property="HoverBrush" Value="{DynamicResource MainMax}" />
        <Setter Property="PressedBrush" Value="{DynamicResource MainMax}" />
        <Setter Property="Padding" Value="8"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource ToolbarMouseHover}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>